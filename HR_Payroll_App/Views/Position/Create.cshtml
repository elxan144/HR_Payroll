@model Position


<div class="col-md-6">
    <form asp-action="Create" asp-controller="Position" method="post">
        <div class="form-group">
            <select class="alert-danger form-control" asp-for="DepartmentId"  id="Select_departments" asp-items="ViewBag.Departments">
                <option>Department</option>
            </select>
        </div>

        <div class="form-group">
            <input type="text" asp-for="Namme" class="form-control" />
        </div>

        <input type="submit" class="btn btn-danger" />

    </form>
</div>
